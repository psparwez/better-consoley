{
    "compilerOptions": {
        "strict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES6",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "isolatedModules": true,
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
